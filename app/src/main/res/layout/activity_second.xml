<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00aaff"
    android:theme="@style/AppTheme"
    tools:context=".SecondActivity">

    <!--Background-->

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/background_image"
    app:layout_constraintBottom_toBottomOf="parent" />

    <!--logo-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/title_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--title-->

    <TextView
        android:id="@+id/title_Label"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Lee's Birthday"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <!--date-->

    <TextView
        android:id="@+id/date_Label"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="2018/06/12"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Label" />

    <!--border-->

    <ImageView
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="45dp"
        android:background="#87ceeb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Label"/>

    <!--place-->

    <ImageView
        android:id="@+id/place_ImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:background="@drawable/markerimage"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_Label" />

    <TextView
        android:id="@+id/place_title"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="場所"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/place_ImageView"
        app:layout_constraintTop_toTopOf="@+id/place_ImageView" />

    <TextView
        android:id="@+id/place_Label"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:text="Lee's house"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/place_ImageView" />

    <!--time-->

    <ImageView
        android:id="@+id/time_ImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:background="@drawable/clockimage"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@+id/place_ImageView"
        app:layout_constraintTop_toBottomOf="@+id/place_ImageView" />

    <TextView
        android:id="@+id/time_starttitle"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="開始時間"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/time_ImageView"
        app:layout_constraintTop_toTopOf="@+id/time_ImageView" />

    <TextView
        android:id="@+id/time_endtitle"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="終了時間"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/time_ImageView"
        app:layout_constraintTop_toBottomOf="@id/time_starttitle" />

    <TextView
        android:id="@+id/time_startLabel"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:text="9:00"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time_ImageView" />

    <TextView
        android:id="@+id/time_endLabel"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="18:00"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_startLabel" />

    <!--memo-->

    <ImageView
        android:id="@+id/note_ImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:background="@drawable/note"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@+id/time_ImageView"
        app:layout_constraintTop_toBottomOf="@+id/time_ImageView" />

    <TextView
        android:id="@+id/note_title"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="メモ"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/note_ImageView"
        app:layout_constraintStart_toEndOf="@+id/note_ImageView" />

    <EditText
        android:id="@+id/note_EditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:isScrollContainer="true"
        android:maxHeight="84dp"
        android:textSize="11dp"
        android:hint="自由にメモしてください"
        android:textColorHint="#aaa"
        android:gravity="top"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_border"
        app:layout_constraintLeft_toLeftOf="@+id/note_ImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_ImageView"
        app:layout_constraintBottom_toTopOf="@+id/dday_ImageView"/>

    <!--D-day-->

    <ImageView
        android:id="@+id/dday_ImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:background="@drawable/dday"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@+id/note_ImageView"
        app:layout_constraintBottom_toTopOf="@+id/edit_Button" />

    <TextView
        android:id="@+id/dday_title"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="D-day"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/dday_ImageView"
        app:layout_constraintStart_toEndOf="@+id/dday_ImageView" />

    <TextView
        android:id="@+id/dday_Label"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical"
        android:text="3day"
        android:textSize="15dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toTopOf="@+id/dday_ImageView"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--編集-->

    <Button
        android:id="@+id/edit_Button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="編集"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>